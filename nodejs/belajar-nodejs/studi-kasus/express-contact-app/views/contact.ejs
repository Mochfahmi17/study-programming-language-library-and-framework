<div class="row">
  <div class="col-md-8">
    <h2>Daftar Contact</h2>
    <a href="/contact/add" class="btn btn-success mb-2">Tambah Data Contact</a>
    <% if (msg.length !== 0) { %>
    <div class="alert alert-success" role="alert"><%= msg %></div>
    <% } %>
    <table class="table table-striped table-hover align-middle">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Nama</th>
          <th scope="col">No Hp</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% if (contacts.length < 1) { %>
        <tr>
          <td colspan="4" class="text-center">Data kontak kosong!</td>
        </tr>
        <% } else { %> <% let no = 1 %> <% contacts.forEach(contact => { %>
        <tr>
          <th scope="row"><%= no++ %></th>
          <td><%= contact.nama %></td>
          <td><%= contact.nohp %></td>
          <td>
            <a href="/contact/<%= contact.nama %>" class="btn badge rounded-pill btn-primary"><i class="bi bi-info-circle"></i> Detail</a>
          </td>
        </tr>
        <% }) %> <% } %>
      </tbody>
    </table>
  </div>
</div>
