<div class="row">
  <div class="col-md-8">
    <h2>Detail Contact</h2>
    <% if (!contact) { %>
    <div class="alert alert-danger fw-bold" role="alert">Data kontak tidak ada.<br /><a href="/contact" class="alert-link fw-normal">kembali ke daftar kontak</a>.</div>
    <% } else { %>
    <div class="card mt-4" style="width: 18rem">
      <div class="card-body">
        <h5 class="card-title"><%= contact.nama %></h5>
        <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.nohp %></h6>
        <% if (!contact.email) { %>
        <p>email : Tidak memiliki email.</p>
        <% } else { %>
        <p>email : <%= contact.email %></p>
        <% } %>
        <a href="/contact" class="card-link btn btn-danger">&larr; Back</a>
        <a href="#" class="card-link btn btn-success">Call</a>
      </div>
    </div>
    <% } %>
  </div>
</div>
